{
  "name": "plaisio/phing-extensions",
  "description": "PhpPlaisio: Phing Extensions",
  "keywords": [
    "PhpPlaisio",
    "Phing Extensions"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-zlib": "*",
    "phing/phing": "^3.0.1",
    "plaisio/helper-url": "^1.3.0",
    "plaisio/kernel": "^3.3.0",
    "plaisio/web-assets": "^3.2.0",
    "setbased/exception": "^2.6.0",
    "setbased/helper-cast": "^3.1.0",
    "setbased/helper-program-execution": "^1.4.0",
    "setbased/php-stratum-sqlite-pdo": "^2.1.0",
    "symfony/filesystem": "^6.0|^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5.22",
    "plaisio/console-kernel": "^1.2.0",
    "plaisio/page-core": "^1.6.0",
    "setbased/php-stratum": "^6.5.0"
  },
  "autoload": {
    "psr-4": {
      "Plaisio\\Phing\\Task\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Plaisio\\Phing\\Task\\Test\\": "test/"
    }
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "allow-plugins": {
      "phing/phing-composer-configurator": true
    }
  }
}
