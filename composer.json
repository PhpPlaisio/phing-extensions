{
  "name": "plaisio/phing-extensions",
  "description": "PhpPlaisio: Phing Extensions",
  "keywords": [
    "PhpPlaisio",
    "Phing Extensions"
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.4",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-zlib": "*",
    "phing/phing": "^3.0.0-RC3",
    "plaisio/helper-url": "^1.1.2",
    "plaisio/kernel": "^3.1.1",
    "plaisio/web-assets": "^3.0.0",
    "setbased/exception": "^2.2.0",
    "setbased/helper-cast": "^2.1.1",
    "setbased/helper-program-execution": "^1.1.0",
    "setbased/php-stratum-sqlite-pdo": "^1.5.1",
    "symfony/filesystem": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.2",
    "plaisio/console": "^2.4.8",
    "plaisio/page-core": "^1.4.2",
    "setbased/php-stratum": "^6.1.0"
  },
  "autoload": {
    "psr-4": {
      "Plaisio\\Phing\\Task\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Plaisio\\Phing\\Task\\Test\\": "test/",
      "Phing\\Support\\": "test/Phing/Support"
    }
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "allow-plugins": {
      "phing/phing-composer-configurator": true
    }
  }
}
